<div id="container">
  
  <div class="header-image">
    <h1>burgers!</h1>
  </div>

  <div class="row">
    <div class="col-2" id="col-left">
      <h2>burgers that are not devoured!</h2>
      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block state=true}} {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-2" id="col-right">
      <h2>burgers that are devoured!</h2>
      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block state=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>


  <div class="row">
    <div class="col-1">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="bu">Burger Name:</label>
          <input type="text" id="bu" name="name">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>


</div>